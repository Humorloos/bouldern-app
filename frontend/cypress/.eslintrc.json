{
  "extends": [
    "plugin:cypress/recommended"
  ],
  "plugins": ["cypress"],
  "rules": {
    // allow triple slash at beginnings of files
    "spaced-comment": [
      "error",
      "always",
      {
        "markers": [
          "/"
        ]
      }
    ]
  },
  "globals": {
    "$t": "readonly",
    "$log": "readonly",
    "constants": "readonly",
    "loginViaLogInLink": "readonly",
    "slugify": "readonly"
  }
}
